<% layout("/layouts/boilerplate") %> 





<body>
    <!-- <h3>All Listings</h3> -->
    <!-- <form action="/listing/new" method="GET">
        <button>Create New Listing</button>
    </form> -->
    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        
      }
       .filter{
        text-align: center;
        margin-top: 2rem;
        margin-right: 2rem;
        opacity: 0.7;
       }
       .filter:hover{
        opacity: 1;
        cursor: pointer;
       }
       .filter p{
        font-size: 0.7rem;
       }
       .filter a{
        text-decoration: none;
        color: black;
       }

       .switch{
        border: 1px solid black;
        border-radius: 23px;
        padding: 0.5rem;
        margin-left: 10rem;
       }
       .tax{
        display: none;
       }
    </style>
     
     <div id="filters" class="collapse navbar-collapse  ">
      
        <div class="filter ">
         <a href="/listing/trending"> <div ><i class="fa-solid fa-fire"></i></div></a>
          <p>Trending</p>
        </div>
        <div class="filter">
          <a href="/listing/Rooms"><div ><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
          </a>
        </div>
        <div class="filter">
          <a href="/listing/Swimming">
          <div><i class="fa-solid fa-person-swimming"></i></div></a>
          <p>Swimming pool</p>
        </div>
        <div class="filter">
          <a href="/listing/farm">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farm</p>
        </a>
        </div>
        <div class="filter">
          <a href="/listing/iconic_city">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p> iconic city</p>
        </a>
        </div>
       
        <div class="filter">
          <a href="/listing/mountains">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>mountains</p>
        </a>
        </div>
        <div class="filter">
          <a href="/listing/swimming_pool">
          <div><i class="fa-brands fa-fort-awesome-alt"></i></div>
          <p>castle</p>
        </a>
        </div>
        <div class="filter">
          <a href="/listing/aetic">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>campain</p>
        </a>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Artic</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-bowl-food"></i></div>
          <p>Food</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-ship"></i></div>
          <p>Boat</p>
        </div>

        <div  class="switch">
          <div class="form-check form-switch form-check-reverse " >
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
            <label class="form-check-label" for="flexSwitchCheckReverse">Reverse switch checkbox input</label>
          </div>
        </div>

     </div>
    
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">

    <% for(let listing of allListings){ %>

        <a href="/listings/<%= listing._id%>" class="listing-link">
    <div class="card col listing-card" >
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <b><p class="card-text"><%= listing.title %></b>
         <br>
         &#8377;<%= listing.price %>/night
         <i class="tax"> &nbsp;&nbsp;+18% GST</i>
        </p>
        </div>
      </div>
    </a>
      <%  } %>
    </div>
    


    
</body>
<script>
  let switchbtn = document.getElementById("flexSwitchCheckReverse");

  
  switchbtn.addEventListener("click",()=>{
   
    let taxinfos = document.getElementsByClassName("tax");
    for(taxinfo of taxinfos){
      if(taxinfo.style.display != "inline" ){
      taxinfo.style.display = "inline";
     }
     else{
      taxinfo.style.display = "none";
     }
    }
    
  })
</script>
